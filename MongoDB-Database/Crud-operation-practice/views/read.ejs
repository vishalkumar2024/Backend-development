<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/Styles//style.css">
    <title>Document</title>
</head>

<body>
    <div class="w-full h-full bg-neutral-900 p-8 text-white">
        <div class="my-8">
            <a href="/" class="underline text-blue-400">Back to Home</a>
        </div>
        <h1 class="text-2xl capitalize mb-4">All users</h1>
        <div class="users flex flex-wrap gap-6 ">
            <% if(users.length==0){ %>
                <div class="text-zinc-400 uppercase mt-3"> No any user</div>
               
                    <% } else { %>
                        <% users.forEach((item)=>{ %>
                            <div class="user  w-72 p-4 bg-zinc-800 rounded-md">
                                <div class="w-full h-52 rounded-md">
                                    <img src="<%= item.image%>" alt="" class="h-full w-full">
                                </div>
                                <h3 class="text-xl mt-3 mb-2 ">
                                    <%= item.name %>
                                </h3>
                                <h5 class="text-zinc-400 ">
                                    <%= item.email %>
                                </h5>
                                <div class="w-full flex justify-between gap-3 my-4 ">
                                    <a href="/edit/<%= item._id%>" class="text-green-400">Edit</a>
                                    <a href="/delete/<%= item._id%>" class="text-red-400">Delete</a>
                                </div>
                            </div>
                            <% }) %>
                                <% }%>
        </div>
    </div>
</body>

</html>